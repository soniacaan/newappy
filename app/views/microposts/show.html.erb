

	

<% provide(:title, @micropost.title) %>

<div id="article">
<div class="container">

<div class="row">
	<div class="col-md-2">
	</div>
	 <div class="col-md-8">
	 <div>
	    	<h0 id="head" name="head" class="title-post"><%= @micropost.title %></h0>
	</div>
			   
  	<div class="picture-post">
		<% if @micropost.picture? %>
		 <%= image_tag @micropost.picture.url %>
		 <% end %>
	</div>
	<div>
	  <span class="body-post">
	   <%= @micropost.body.html_safe %>
	  </span>
	  </div>
	 <div>
			       <% if logged_in? %>
					<%= link_to 'Edit', edit_micropost_path(@micropost), :class => "btn btn-primary btn-sm button active" %>
					<% end %>
					<%= link_to 'Back to Articles List', root_url, :class => "btn btn-primary btn-sm button active" %>
	</div>
	</div>
  <div class="col-md-2">
  </div>
</div>
</div>
</div>
